<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">

    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:state_enabled="false"
                android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_app_73d4d4d4" />

                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_app_59d4d4d4" />

                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_app_66d4d4d4" />

                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_app_d4d4d4" />

                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_app_73d4d4d4" />

                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_app_00000000" />

                    <corners android:radius="2dp" />
                </shape>
            </item>
        </selector>
    </item>

</ripple>